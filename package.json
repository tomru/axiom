{
  "private": true,
  "scripts": {
    "netlify": "yarn run build:packages && yarn run build:site",
    "build:flags": "NODE_ENV=production bash ./scripts/build_flags.sh",
    "build:packages": "NODE_ENV=production bash ./scripts/build_packages.sh",
    "build:site": "NODE_ENV=production bash ./scripts/build_site.sh",
    "ci:setup": "NODE_ENV=production bash ./scripts/ci_setup.sh",
    "ci:test": "TZ=utc jest ./packages/**/dist --config .jest.ci.json",
    "lint": "yarn run lint:js && yarn run lint:css",
    "lint:css": "stylelint 'packages/**/*.css' 'site/**/*.css'",
    "lint:js": "eslint --config .eslintrc packages site",
    "lint:commits": "./scripts/validate_commit_messages.sh",
    "publish:packages": "bash ./scripts/publish_packages.sh",
    "publish:site": "bash ./scripts/publish_site.sh",
    "start": "bash ./scripts/start_development.sh",
    "postinstall": "lerna run prepublish && lerna run prepare",
    "test": "TZ=utc BABEL_ENV=test jest ./packages --config .jest.json"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "babel-cli": "6.11.4",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.9",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "caniuse-lite": "^1.0.30000697",
    "clean-webpack-plugin": "^0.1.14",
    "color": "^3.1.0",
    "compression-webpack-plugin": "^0.3.2",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.23.1",
    "d3-cloud": "^1.2.5",
    "ejs": "^2.5.2",
    "ejs-loader": "^0.3.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.9.0",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "flag-svg-collection": "^1.1.0",
    "html-webpack-plugin": "^2.24.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "jsdom": "^14.0",
    "lerna": "^3.4.1",
    "lodash.chunk": "^4.2.0",
    "lodash.flatten": "^4.4.0",
    "lodash.maxby": "^4.6.0",
    "lodash.minby": "^4.6.0",
    "nearest-color": "^0.4.4",
    "postcss-cli": "^6.0.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.8",
    "react": "^16.4.1",
    "react-addons-test-utils": "^16.0.0-0",
    "react-dom": "^16.4.1",
    "react-hot-loader": "^3.1.3",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.0.0",
    "static-site-generator-webpack-plugin": "^3.4.1",
    "style-loader": "^0.13.1",
    "stylelint": "^7.9.0",
    "stylelint-order": "^0.6.0",
